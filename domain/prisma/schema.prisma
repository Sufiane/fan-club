// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

model Users {
  id                Int           @id @default(autoincrement())
  username          String
  email             String        @unique
  password          String
  description       String
  profilePictureUrl String        @map("profile_picture_url")
  Medias            Medias[]
  UserFollowers     UserFollows[] @relation("Follows")
  UserFollows       UserFollows[] @relation("Followers")
}

model Medias {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  url         String
  userId      Int    @map("user_id")
  user        Users  @relation(fields: [userId], references: [id])
}

model UserFollows {
  id         Int   @id @default(autoincrement())
  followerId Int
  follower   Users @relation("Follows", fields: [followerId], references: [id])
  followedId Int
  followed   Users @relation("Followers", fields: [followedId], references: [id])

  @@map("user_follows")
}
