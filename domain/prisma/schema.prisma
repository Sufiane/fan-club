// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

model Users {
  id                Int    @id @default(autoincrement())
  username          String
  email             String @unique
  password          String
  description       String
  profilePictureUrl String @map("profile_picture_url")
}
